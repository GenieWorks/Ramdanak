<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
  <RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#87ceeb"
    >


    <ImageView
        android:id="@+id/showLogo"
        android:layout_marginRight="10dp"
        android:layout_marginTop="25dp"
        android:scaleType="fitXY"
        android:layout_width="120dp"
        android:layout_height="170dp"
        android:layout_alignParentRight="true"
        />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medium Text"
        android:layout_toLeftOf="@+id/showLogo"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        android:textSize="25dp"
        android:padding="2dp"
        android:layout_marginRight="20dp"
        android:textColor="#000"
        android:textStyle="bold" />

    <RatingBar android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize="1.0"
        android:rating="3.5"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/name"
        android:layout_toLeftOf="@+id/showLogo"
        android:layout_marginRight="20dp"
        style="?android:attr/ratingBarStyleSmall"
        />

    <TextView
        android:id="@+id/ratingText"
        android:text="4.8"
        android:layout_toLeftOf="@id/ratingBar"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/name"
        android:layout_width="30dp"
        android:layout_height="30dp"/>

    <Button
        android:id="@+id/videoButton"
        android:background="@drawable/button_shape"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="شاهد الفيديو"
        android:textColor="#000"
        android:layout_marginRight="25dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/showLogo"
        android:layout_alignParentRight="true"
        android:drawableRight="@drawable/arrow"
        />



    <Button
        android:id="@+id/favouriteButton"
        android:background="@drawable/button_shape"
        android:text="اضف للمفضله"
        android:layout_below="@+id/showLogo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        android:layout_width="wrap_content"
        android:textColor="#000"
        android:drawableRight="@drawable/glow_star"
        android:layout_height="40dp"/>

    <Button
        android:id="@+id/ratingButton"

        android:text="اضف تقييم"
        android:background="@drawable/button_shape"
        android:drawableRight="@drawable/arrow"
        android:layout_below="@+id/showLogo"
        android:layout_width="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp"
        android:layout_height="40dp" />

    <TextView
        android:id="@+id/desc"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="التفاصيل"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/favouriteButton"
        android:textSize="25dp"
        android:gravity="right"
        android:layout_marginRight="1dp"
        android:layout_marginLeft="1dp"
        android:background="#eee9e9"
        android:textColor="#000"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/descText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="مسلسل جامد فشخ"
        android:gravity="right"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/desc"
        android:textSize="25dp"
        android:layout_marginRight="1dp"
        android:layout_marginLeft="1dp"
        android:background="#fff"
        android:textColor="#000"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/listText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="يعرض على:"
        android:gravity="right"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_below="@+id/descText"
        android:textSize="25dp"
        android:layout_marginRight="1dp"
        android:layout_marginLeft="1dp"
        android:background="#eee9e9"
        android:textColor="#000"
        android:textStyle="bold"
        />

    <ListView
        android:id="@+id/channelList"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/listText"
        android:divider="#d9d9d9"
        android:background="#fff"
        android:cacheColorHint="#00000000"
        android:dividerHeight="1dp" />


  </RelativeLayout>
</ScrollView>